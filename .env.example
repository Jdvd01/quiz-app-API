# =====================================
# OpenAI API Key (required)
# =====================================
OPENAI_API_KEY=sk-xxx

# =====================================
# Server Port (optional, defaults to 3001)
# =====================================
PORT=3001

# =====================================
# Default quiz language
# Supported examples: en, es, fr, de, it
# =====================================
DEFAULT_LANGUAGE=en

# =====================================
# Supported quiz languages (comma separated)
# =====================================
SUPPORTED_LANGUAGES=en,es,fr,de,it,pt,ja,ko,zh

# =====================================
# Default quiz level
# =====================================
DEFAULT_LEVEL=intermediate

# =====================================
# Supported quiz levels (comma separated)
# =====================================
SUPPORTED_LEVELS=beginner,basic,intermediate,advanced,expert